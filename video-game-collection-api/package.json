{
  "name": "video-game-collection-api",
  "version": "1.0.0",
  "description": "A RESTful API for managing a collection of video games with full CRUD operations, i18n, versioning, and HATEOAS.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "migrate": "sequelize db:migrate"
  },
  "dependencies": {
    "express": "^5.0.0",
    "sequelize": "^6.35.2",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.3.1",
    "i18next": "^23.7.6",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "xml": "^1.0.1",
    "yaml": "^2.3.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "keywords": [
    "API",
    "RESTful",
    "video games",
    "collection",
    "CRUD",
    "Express",
    "PostgreSQL",
    "Sequelize",
    "i18n",
    "HATEOAS",
    "API versioning"
  ],
  "author": "Jason",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
